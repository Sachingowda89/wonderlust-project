<% layout('layouts/boilerplate') %>
<!-- flash msg -->
<% if (success && success.length > 0) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h2 class="text-center mb-4">Create a New Listing</h2>

      <form method="POST" action="/listings" class="border p-4 rounded bg-white shadow-sm  needs-validation" novalidate >

        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input 
            type="text"
            id="title"
            name="listing[title]"
            placeholder="Add a catchy title"
            class="form-control"
            required
        />
        <!-- succes and failure text -->
          <div class="valid-feedback">Title Looks good!</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea 
            id="description"
            name="listing[description]"
            placeholder="Write something about the listing"
            class="form-control"
            rows="3"
            required
          ></textarea>
          <!-- succes and failure text -->
            <div class="invalid-feedback">please enter short discription</div>
        </div>

        <!-- Image URL -->
        <div class="mb-3">
          <label for="image" class="form-label">Image Link</label>
          <input 
            type="text"
            id="image"
            name="listing[image][url]"
            placeholder="enter image URL/Link"
            class="form-control"
          />
        </div>

        <!-- Price and Country in Same Row -->
        <div class="mb-3 row">
          <div class="col">
            <label for="price" class="form-label">Price</label>
            <input 
              type="number"
              id="price"
              name="listing[price]"
              placeholder="1200"
              class="form-control"
              required
            />
            <!-- succes and failure text -->
             <div class="invalid-feedback">price should be valid</div>
          </div>
          <div class="col">
            <label for="country" class="form-label">Country</label>
            <input 
              type="text"
              id="country"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <!-- succes and failure text -->
           <div class="invalid-feedback">country name should be valid</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input 
            type="text"
            id="location"
            name="listing[location]"
            placeholder="Jaipur, Rajasthan"
            class="form-control"
            required
          />
          <!-- succes and failure text -->
            <div class="invalid-feedback">location should be valid</div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-danger px-4">Add</button>
        </div>

      </form>
    </div>
  </div>
</div>
